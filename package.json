{
    "name": "wp-smartpay",
    "version": "2.7.2",
    "description": "A simple plugin for receiving payment.",
    "repository": {
        "type": "git",
        "url": "https://github.com/wpsmartpay/wp-smartpay/"
    },
    "license": "MIT",
    "author": "WPSmartPay (https://wpsmartpay.com/)",
    "scripts": {
        "dev": "mix",
        "watch": "mix watch",
        "prod": "mix --production",
        "build": "npm run prod && npm run build:form && npm run build:blocks",
        "watch:form": "wp-scripts start resources/form-builder/index.js --output-path=public/form-builder",
        "build:form": "wp-scripts build resources/form-builder/index.js --output-path=public/form-builder",
        "watch:blocks": "wp-scripts start resources/blocks/index.js --output-path=public/blocks",
        "build:blocks": "wp-scripts build resources/blocks/index.js --output-path=public/blocks",
        "release": "npm run build && gulp release",
        "commit": "git-cz"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "dependencies": {
        "@wordpress/api-fetch": "^6.18.0",
        "@wordpress/base-styles": "^4.12.0",
        "@wordpress/block-editor": "^10.4.0",
        "@wordpress/block-library": "^7.18.0",
        "@wordpress/blocks": "^11.20.0",
        "@wordpress/components": "^22.0.0",
        "@wordpress/core-data": "^5.4.0",
        "@wordpress/data": "^7.5.0",
        "@wordpress/dom-ready": "^3.21.0",
        "@wordpress/editor": "^12.20.0",
        "@wordpress/element": "^4.19.0",
        "@wordpress/env": "^5.6.0",
        "@wordpress/eslint-plugin": "^13.5.0",
        "@wordpress/format-library": "^3.19.0",
        "@wordpress/hooks": "^3.21.0",
        "@wordpress/i18n": "^4.21.0",
        "@wordpress/interface": "^4.20.0",
        "@wordpress/media-utils": "^4.12.0",
        "@wordpress/plugins": "^4.19.0",
        "@wordpress/scripts": "^24.5.0",
        "apexcharts": "^3.36.3",
        "bootstrap": "^4.6.0",
        "dayjs": "^1.11.6",
        "jquery": "^3.6.1",
        "popper.js": "^1.16.1",
        "react-apexcharts": "^1.4.0",
        "react-bootstrap": "^1.6.4",
        "react-feather": "^2.0.10",
        "react-router": "^6.4.3",
        "react-router-dom": "^6.4.3",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.56.0",
        "sass-loader": "^13.1.0",
        "sweetalert2": "^11.6.7"
    },
    "devDependencies": {
        "@babel/core": "^7.20.2",
        "@babel/helper-create-class-features-plugin": "^7.20.2",
        "@babel/preset-react": "^7.18.6",
        "@babel/register": "^7.18.9",
        "chalk": "^5.1.2",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "del": "^6.0.0",
        "git-cz": "^4.9.0",
        "gulp": "^4.0.2",
        "gulp-zip": "^5.1.0",
        "jiti": "^1.16.0",
        "laravel-mix": "^6.0.49",
        "vue-template-compiler": "^2.6.14",
        "yorkie": "^2.0.0"
    },
    "gitHooks": {
        "commit-msg": "jiti scripts/verify-commit-msg.js"
    }
}
